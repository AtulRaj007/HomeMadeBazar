            android:layout_weight="1"
            android:text="31/12/2015" />


        <!--</LinearLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/colorPrimary"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/checkbox_breakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_breakfast"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/checkbox_lunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_lunch"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/checkbox_dinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_dinner"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/padding_5"
        android:paddingTop="@dimen/padding_5" />

    <Button
        android:id="@+id/btn_book_order"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@drawable/button_round_primary"
        android:text="@string/str_book"
        android:textColor="@color/white" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_20">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/str_rating_user"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_15">

        <ImageView
            android:id="@+id/iv_first_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/star"
            android:tag="0" />

        <ImageView
            android:id="@+id/iv_second_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/star"
            android:tag="1" />

        <ImageView
            android:id="@+id/iv_third_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/star"
            android:tag="2" />

        <ImageView
            android:id="@+id/iv_fourth_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/star"
            android:tag="3" />

        <ImageView
            android:id="@+id/iv_fifth_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/star"
            android:tag="4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_rating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_15"
        android:text="@string/str_write_short_review"
        android:textSize="@dimen/text_16" />

    <EditText
        android:id="@+id/et_review_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_review_title"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:hint="@string/str_tell_us_what_you_think"
        android:maxLines="3" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/et_review_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/button_oval_primary"
        android:text="@string/str_submit"
        android:textColor="@color/white"

        />


</RelativeLayout>
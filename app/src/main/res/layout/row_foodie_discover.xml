<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_screen"
    android:layout_margin="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/grey" />

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/view_pager"
            android:layout_marginTop="-50dp"
            android:src="@color/background_screen" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_pager"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:text="Vivek Gupta"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            android:text="4.5"
            android:textSize="@dimen/text_18"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile_pic"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Corner"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/tv_food_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="North India" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5"
                android:text="50% Off"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_book_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_round_primary"
                android:text="Book"
                android:textColor="@color/white" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>